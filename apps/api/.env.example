# Server Configuration
NODE_ENV=development
PORT=3001

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:8080

# Database Configuration
DATABASE_URL=postgresql://fuseloja:fuseloja@localhost:5432/fuseloja?schema=public
DB_HOST=localhost
DB_PORT=5432
DB_USER=fuseloja
DB_PASSWORD=fuseloja
DB_NAME=fuseloja

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production-min-32-chars-please
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-in-production-min-32-chars-please
JWT_ACCESS_TOKEN_EXPIRY=15m
JWT_REFRESH_TOKEN_EXPIRY=7d

# CORS Configuration
CORS_ORIGIN=http://localhost:8080,http://localhost:3000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100

# File Upload
MAX_FILE_SIZE=5242880

# Logging
LOG_LEVEL=debug
